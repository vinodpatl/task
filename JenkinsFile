pipeline {
    agent any
    
stages {
        stage('Checkout Code') {
            steps {
                
                git Branch:main  git 'https://github.com/vinodpatl/task.git/'
            }
        }
        
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build Project') {
            steps {
                
                sh 'npm run build'
            }
        }

        stage('Test') {
            steps {
              
                sh 'npm test'
            }
        }
